{
  "name": "rustlings-helper",
  "displayName": "Rustlings Helper",
  "publisher": "drwilco",
  "description": "Go through Rustlings exercises quicker",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.82.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:info.toml"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "rustlings-helper",
          "title": "Rustlings Helper",
          "icon": "media/rustlings.svg"
        }
      ]
    },
    "views": {
      "rustlings-helper": [
        {
          "id": "rustlingsHelper.exercisesView",
          "type": "tree",
          "name": "Exercises",
          "icon": "media/rustlings.svg"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "rustlingsHelper.exercisesView",
        "contents": "No Rustlings exercises found in this workspace. Please open your rustlings folder.\n[Open Folder](command:vscode.openFolder)\nIf you don't have a Rustlings folder yet, please follow these instructions:\n[Install Rustlings](https://github.com/rust-lang/rustlings#getting-started)\n",
        "when": "!rustlings-helper:hasRustlings"
      },
      {
        "view": "rustlingsHelper.exercisesView",
        "contents": "No exercise open. Please open an exercise.\n[Open Next Exercise](command:rustlings-helper.openNextExercise)\n",
        "when": "rustlings-helper:hasRustlings && !rustlings-helper:exerciseOpen && !rustlings-helper:allDone"
      },
      {
        "view": "rustlingsHelper.exercisesView",
        "contents": "Congratulations! You have completed all exercises.\nYou can still go back and play with the exercises.\n[Open Exercise](command:rustlings-helper.openExercise)\n",
        "when": "rustlings-helper:hasRustlings && !rustlings-helper:exerciseOpen && rustlings-helper:allDone"
      }
    ],
    "commands": [
      {
        "command": "rustlings-helper.openNextExercise",
        "title": "Open Next Exercise",
        "when": "rustlings-helper:hasRustlings",
        "category": "Rustlings Helper"
      },
      {
        "command": "rustlings-helper.openExercise",
        "title": "Open Exercise",
        "when": "rustlings-helper:hasRustlings",
        "category": "Rustlings Helper"
      },
      {
        "command": "rustlings-helper.toggleDone",
        "title": "Toggle Done on Exercise",
        "when": "rustlings-helper:exerciseOpen",
        "category": "Rustlings Helper",
        "icon": "$(check)"
      },
      {
        "command": "rustlings-helper.watch",
        "title": "Start Rustlings Watch",
        "when": "rustlings-helper:hasRustlings && !rustlings-helper:watching",
        "category": "Rustlings Helper",
        "icon": "$(eye)"
      },
      {
        "command": "rustlings-helper.hint",
        "title": "Show Hint",
        "when": "rustlings-helper:exerciseOpen",
        "category": "Rustlings Helper",
        "icon": "$(question)"
      },
      {
        "command": "rustlings-helper.readme",
        "title": "Open Readme for section",
        "when": "rustlings-helper:exerciseOpen",
        "category": "Rustlings Helper",
        "icon": "$(info)"
      }
    ],
    "keybindings": [
      {
        "command": "rustlings-helper.toggleDone",
        "key": "ctrl+alt+d",
        "mac": "ctrl+cmd+d",
        "when": "rustlings-helper:exerciseOpen"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "rustlings-helper.watch",
          "when": "view == rustlingsHelper.exercisesView && rustlings-helper:hasRustlings && !rustlings-helper:watching",
          "group": "navigation"
        },
        {
          "command": "rustlings-helper.toggleDone",
          "when": "view == rustlingsHelper.exercisesView && rustlings-helper:exerciseOpen",
          "group": "navigation"
        },
        {
          "command": "rustlings-helper.hint",
          "when": "view == rustlingsHelper.exercisesView && rustlings-helper:exerciseOpen",
          "group": "navigation"
        },
        {
          "command": "rustlings-helper.readme",
          "when": "view == rustlingsHelper.exercisesView && rustlings-helper:exerciseOpen",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "node ./esbuild.js",
    "package": "NODE_ENV=production node ./esbuild.js",
    "watch": "node ./esbuild.js --watch",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/child-process-promise": "^2.2.3",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.82.0",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "@vscode/test-electron": "^2.3.4",
    "esbuild": "^0.16.17",
    "eslint": "^8.47.0",
    "glob": "^10.3.3",
    "mocha": "^10.2.0",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "@types/markdown-it": "^13.0.1",
    "@vscode/webview-ui-toolkit": "^1.2.2",
    "child-process-promise": "^2.2.1",
    "markdown-it": "^13.0.1",
    "toml": "^3.0.0"
  }
}
