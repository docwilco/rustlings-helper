{
  "name": "rustlings-helper",
  "displayName": "Rustlings Helper",
  "publisher": "drwilco",
  "description": "Go through Rustlings exercises quicker",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.82.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:info.toml"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "rustlings-helper",
          "title": "Rustlings Helper",
          "icon": "media/rustlings.svg"
        }
      ]
    },
    "views": {
      "rustlings-helper": [
        {
          "id": "rustlingsHelper.view",
          "type": "webview",
          "name": "Rustlings Helper",
          "when": "rustlings-helper:hasRustlings && rustlings-helper:exerciseOpen"
        },
        {
          "id": "rustlingsHelper.noExerciseOpen.view",
          "name": "Rustlings Helper",
          "when": "rustlings-helper:hasRustlings && !rustlings-helper:exerciseOpen"
        },
        {
          "id": "rustlingsHelper.noRustlings.view",
          "name": "Rustlings Helper",
          "when": "!rustlings-helper:hasRustlings "
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "rustlingsHelper.noRustlings.view",
        "contents": "No Rustlings exercises found in this workspace. Please open your rustlings folder.\n[Open Folder](command:vscode.openFolder)\nIf you don't have a Rustlings folder yet, please follow these instructions:\n[Install Rustlings](https://github.com/rust-lang/rustlings#getting-started)\n",
        "when": "!rustlings-helper:hasRustlings"
      },
      {
        "view": "rustlingsHelper.noExerciseOpen.view",
        "contents": "No exercise open. Please open an exercise.\n[Open Exercise](command:rustlings-helper.openExercise)\n",
        "when": "rustlings-helper:hasRustlings && !rustlings-helper:exerciseOpen"
      }
    ],
    "commands": [
      {
        "command": "rustlings-helper.helloWorld",
        "title": "Hello World"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.82.0",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "@vscode/test-electron": "^2.3.4",
    "eslint": "^8.47.0",
    "glob": "^10.3.3",
    "mocha": "^10.2.0",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "toml": "^3.0.0"
  }
}
